rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User stats collection
    match /users/{userId} {
      // Anyone can read user stats (for leaderboard)
      allow read: if true;

      // Only the user can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Only the user can update their own stats
      allow update: if request.auth != null && request.auth.uid == userId;

      // Don't allow delete
      allow delete: if false;
    }

    // Custom levels collection
    match /levels/{levelId} {
      // Anyone can read levels
      allow read: if true;

      // Only authenticated users can create levels
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;

      // Only the creator can update their level
      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid;

      // Only the creator can delete their level
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }
  }
}
